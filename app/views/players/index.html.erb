<h1>All Players</h1>
<%= link_to 'Home', welcome_index_path %><br><br>
<%= link_to "Register a new player", new_player_path %><br><br>

<table>
  <col width="150">
  <col width="100">
  <col width="100">
  <col width="100">
  <col width="100">
  <col width="100">
  <tr>
    <th align="left">Name</th>
    <th align="left">Rating</th>
    <th align="left">Wins</th>
    <th align="left">Losses</th>
    <th align="left">Ratio</th>
  </tr>

  <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.rating %></td>
        <td><%= player.wins %></td>
        <td><%= player.losses %></td>
        <td><% if player.losses > 0 %>
              <%= player.wins / player.losses %>
            <% else %>
              <%= "Undefeated" %>
            <% end %>
        </td>
      </tr>
  <% end %>
</table>