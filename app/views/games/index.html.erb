<h1>All Games</h1>
<%= link_to 'Home', welcome_index_path %><br><br>
<table class="my-info">
  <col width="200">
  <col width="100">
  <col width="200">
  <col width="100">
  <col width="50">
  <col width="50">
  <tr>
    <th align="left">Player 1</th>
    <th align="left">Score</th>
    <th align="left">Player 2</th>
    <th align="left">Score</th>
  </tr>

  <% @games.each do |game| %>
      <tr class="top-border">
        <td><%= link_to game.player1.name, "/players/" + game.player1_id.to_s, :class => "no-show-link" %></td>
        <td><%= game.p1score %></td>
        <td><%= link_to game.player2.name, "/players/" + game.player2_id.to_s, :class => "no-show-link" %></td>
        <td><%= game.p2score %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Delete', game_path(game),
                        method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>