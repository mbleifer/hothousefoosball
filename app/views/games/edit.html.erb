<h1>Editing Game</h1>

<%= form_for :game, url: game_path(@game), method: :patch do |f| %>
    <% if @game.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@game.errors.count, "error") %> prohibited
            this game from being saved:</h2>
          <ul>
            <% @game.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <br>
    <p>
      <%= f.label :player1, 'Player 1' %><br>
      <%= f.collection_select(:player1, Player.all, :id, :name, :selected => @game.player1_id) %>
    </p>
    <p>
      <%= f.label :p1score, 'Player 1 Score'  %><br>
      <%= f.text_field :p1score %>
    </p>
    <br>
    <p>
      <%= f.label :player2, 'Player 2' %><br>
      <%= f.collection_select(:player2, Player.all, :id, :name, :selected => @game.player2_id) %>
    </p>
    <p>
      <%= f.label :p2score, 'Player 2 Score'  %><br>
      <%= f.text_field :p2score %>
    </p>
    <br>

    <p>
      <%= f.submit %>
    </p>
<% end %>
<br>
<%= link_to 'Back', games_path %>